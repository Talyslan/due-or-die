{
    "functions": {
        "source": "functions",
        "runtime": "nodejs20",
        "predeploy": ["npm --prefix functions run build"]
    },
    "hosting": {
        "public": "frontend/out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
